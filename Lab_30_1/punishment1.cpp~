#include <iostream>
using namespace std;
int main(){
	cout<<"Enter the number of lines for the punishment:"<<endl;
	int times;
	cin >> times;
	if(times < 1)
		cout<<"You entered an incorrect value for the number of lines!"<<endl;
	else{
		for(int i = 0; i < times; i++){
		cout<<"I will always use object oriented programming.";
	}	}
	return 0;
}
